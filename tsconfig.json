{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@hocs": ["hocs"],
      "@hocs/*": ["hocs/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@mocks": ["mocks"],
      "@mocks/*": ["mocks/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"]
    },
    "incremental": true
  },
  "types": ["@types/jest"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
